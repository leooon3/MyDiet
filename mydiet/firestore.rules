rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Fetch the current user's document from the database
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Check if user is Admin/Nutritionist via Token OR Database (Fallback)
    function isAdmin() {
      return isSignedIn() && (
        (request.auth.token.keys().hasAny(['role']) && request.auth.token.role in ['admin', 'nutritionist']) ||
        getUserData().role in ['admin', 'nutritionist']
      );
    }

    // --- RULES ---

    // 1. Config: Public Read
    match /config/global {
      allow read: if true;
      allow write: if false;
    }

    // 2. Diet History (Global): Admins only
    match /diet_history/{document=**} {
      allow read, write: if isAdmin();
    }

    // 3. User Data    
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create, update: if isOwner(userId); // Allow creation and updates
      allow delete: if false; // Prevent deletion
      
      // Diets: Owner can do everything. Admin can read.
      match /diets/{dietId} {
        allow read, write: if isOwner(userId);
        allow read: if isAdmin();
      }
      
      // Parser History: Admin only (Nutritionist config)
      match /parser_history/{docId} {
        allow read: if isAdmin();
        allow write: if false; // Backend writes this
      }
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}