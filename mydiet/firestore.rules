rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Checks the custom claim set by the backend
    function isAdmin() {
      return isSignedIn() && request.auth.token.role in ['admin', 'nutritionist'];
    }

    // --- RULES ---

    // Config: Public Read (for maintenance screen), No Write (Backend only)
    match /config/global {
      allow read: if true;
      allow write: if false;
    }

    // [NEW] Diet History: Admin Full Access
    match /diet_history/{document=**} {
      allow read, write: if isAdmin();
    }

    // User Data
    match /users/{userId} {
      // Profile: Owner and Admin can Read. Only Backend can Write (create/delete).
      allow read: if isOwner(userId) || isAdmin();
      allow write: if false;

      // Diets Subcollection: Owner has full control. Admin can read.
      match /diets/{dietId} {
        allow read, write: if isOwner(userId);
        allow read: if isAdmin();
      }
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}